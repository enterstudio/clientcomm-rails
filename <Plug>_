<div class="container">
  <div class="card mt-4">
    <h4 class="card-header">
      Edit account settings
    </h4>
    <div class="card-body">
      <%= form_for(resource, as: resource_name, url: user_registration_path, html: { method: :patch }) do |f| %>
        <div class="form-group">
          <%= f.label :full_name, 'Full name' %>
          <%= f.text_field :full_name, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :email, 'Email' %>
          <%= f.email_field :email, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :desk_phone_number, 'Phone Number' %>
          <small class="form-text text-muted">If a client tries to call your ClientComm number, we'll redirect the calls to this number.</small>
          <%= f.text_field :desk_phone_number, class: "form-control #{'is-invalid' if resource.errors.added? :desk_phone_number}" %>
          <% if resource.errors.added? :desk_phone_number %>
            <% resource.errors.full_messages_for(:desk_phone_number).each do |message| %>
              <div class="invalid-feedback">
                <%= message %>
              </div>
            <% end %>
          <% end %>
        </div>
        <%= f.submit 'Update settings', class: 'btn btn-primary', role: 'button', name: 'update_settings' %>
      <% end %>
    </div>
  </div>

  <div class="card mt-4">
    <h4 class="card-header">
      Change password
    </h4>
    <div class="card-body">
      <%= form_for(resource, as: resource_name, url: user_registration_path, html: { method: :patch }) do |f| %>
        <div class="form-group">
          <%= f.label :current_password, 'Current password' %>
          <%= f.password_field :current_password, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :password, 'New password' %>
          <small class="form-text text-muted">Must be at least 6 characters.</small>
          <%= f.password_field :password, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :password_confirmation, 'Confirm new password' %>
          <%= f.password_field :password_confirmation, class: 'form-control' %>
        </div>
        <%= f.submit 'Change password', class: 'btn btn-primary', role: 'button', name: 'change_password' %>
      <% end %>
    </div>
  </div>
</div>
